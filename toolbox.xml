<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category name="ROBOCON" colour="#44cbc6" icon="flag">
    <block type="robocon_follow_line_until">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">30</field>
        </shadow>
      </value>
      <value name="condition">
      </value>
      <value name="timeout">
        <shadow type="math_number">
          <field name="NUM">5</field>
        </shadow>
      </value>
    </block>

    <block type="robocon_follow_line_delay">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">30</field>
        </shadow>
      </value>
      <value name="timeout">
        <shadow type="math_number">
          <field name="NUM">5</field>
        </shadow>
      </value>
    </block>

    <block type="robocon_turn_until_line_detected">
      <value name="m1_speed">
        <shadow type="math_number">
          <field name="NUM">30</field>
        </shadow>
      </value>
      <value name="m2_speed">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
      <value name="timeout">
        <shadow type="math_number">
          <field name="NUM">5</field>
        </shadow>
      </value>
    </block>
    <block type="robocon_turn_until_condition">
      <value name="m1_speed">
        <shadow type="math_number">
          <field name="NUM">30</field>
        </shadow>
      </value>
      <value name="m2_speed">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
      <value name="condition">
      </value>
      <value name="timeout">
        <shadow type="math_number">
          <field name="NUM">5</field>
        </shadow>
      </value>
    </block>

    <block type="gamepad_init"/>

    <block type="gamepad_mode"/>

    <block type="gamepad_speed_btn"/>

    <block type="gamepad_set_servo">
      <value name="angle_min">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>

      <value name="angle_max">
        <shadow type="math_number">
          <field name="NUM">90</field>
        </shadow>
      </value>
    </block>

    <block type="gamepad_processing"/>

  </category>
</xml>
